<h1>編集画面</h1>
<%= form_with(model: @user, local: true) do |form| %>
<div class="user_name">
  <%= form.label :name%>
  <%= form.text_field :name%>
</div>

  <div class="user_email">
    <%= form.label :email%>
    <%= form.text_field :email%>
  </div>

  <div class="image_field">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <%= form.submit "送信"%>
<% end %>