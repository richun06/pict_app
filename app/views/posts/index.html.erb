<h1>投稿一覧</h1>
<%= link_to "新規作成画面へ", new_blog_path, class:"btn" %>
<table>
  <tr>
    <th>名前</th>
    <th>内容</th>
    <th></th>
    <th></th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= blog.content %></td>
    <td><%= image_tag(blog.image.url) if blog.image && blog.image.url %></td>
    <td><%= link_to "詳細画面へ", blog_path(blog.id) %></td>
    <td><%= link_to "編集画面へ", edit_blog_path(blog.id), data:{confirm:'本当に編集してよいですか？'}%></td>
    <td><%= link_to "削除する",blog_path(blog.id),method: :delete, data:{confirm:'本当に削除してよいですか？'}%></td>
  </tr>
  <% end %>
</table>